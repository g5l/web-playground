{
  "name": "own-react",
  "version": "1.0.0",
  "description": "A React clone built with TypeScript for learning purposes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --sourcemap --loader:.js=jsx --jsx=transform --jsx-factory=Vibe.createElement",
    "build:watch": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --sourcemap --watch --loader:.js=jsx --jsx=transform --jsx-factory=Vibe.createElement",
    "build:prod": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --minify --loader:.js=jsx --jsx=transform --jsx-factory=Vibe.createElement",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "serve -s . -p 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "typescript",
    "virtual-dom",
    "learning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^17.0.87",
    "@types/react-dom": "^17.0.26",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
